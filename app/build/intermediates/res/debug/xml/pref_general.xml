        android:inputType="number|numberSigned"
        android:defaultValue="0"
        android:key="mins_after_end"
        android:negativeButtonText="@string/pref_dialog_neg_end_time"
        android:positiveButtonText="@string/ok"
        android:title="@string/pref_title_end_time"
        android:dialogTitle="@string/pref_dialog_title_end_time" />

    </PreferenceCategory>
    
