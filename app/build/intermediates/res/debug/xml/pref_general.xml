<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <PreferenceCategory 
        android:title="@string/pref_update_settings_title"
        android:key="pref_key_storage_settings">
    
    <ListPreference
        android:defaultValue="Normal"
        android:entries="@array/pref_list_modes"
        android:entryValues="@array/pref_list_modes"
        android:key="mode_list"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_title_end_mode"
        android:dialogTitle="@string/pref_dialog_title_end_mode" />
    
